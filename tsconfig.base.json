    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "paths": {
      "@xenopus/core/*": ["./js-packages/xenopus-core/src/*"],
      "@xenopus/generator/*": ["./js-packages/xenopus-generator/src/*"]
