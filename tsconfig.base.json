{
  "compilerOptions": {
    "strictNullChecks": true,
    "esModuleInterop": true,
    "jsx": "react",
    "moduleResolution": "node",
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "paths": {
      "@xenopus/viewmodel": ["./js-packages/@xenopus/viewmodel/src/"],
      "@xenopus/viewmodel/*": ["./js-packages/@xenopus/viewmodel/src/*"],
      "@xenopus/codegen/*": ["./js-packages/@xenopus/codegen/src/*"],
      "@xenopus/ui": ["./js-packages/@xenopus/ui/src/"],
      "@xenopus/ui/*": ["./js-packages/@xenopus/ui/src/*"],
      "@xenopus/ui-antd/*": ["./js-packages/@xenopus/ui-antd/src/*"],
      "@xenopus/final-form/*": ["./js-packages/@xenopus/final-form/src/*"]
    }
  },
  "references": [
    {
      "path": "./js-packages/@xenopus/viewmodel/tsconfig.json"
    },
    {
      "path": "./js-packages/@xenopus/codegen/tsconfig.json"
    },
    {
      "path": "./js-packages/@xenopus/ui/tsconfig.json"
    },
    {
      "path": "./js-packages/@xenopus/ui-antd/tsconfig.json"
    },
    {
      "path": "./js-packages/@xenopus/final-form/tsconfig.json"
    }
  ],

  "files": []
}
