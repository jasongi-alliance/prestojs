{
  "name": "xenopus",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Dave Coates <david.coates@alliancesoftware.com.au>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "js-packages/@xenopus/*",
    "django-testbed"
  ],
  "scripts": {
    "lint": "eslint js-packages --ext .js,.ts",
    "check-types": "tsc -b tsconfig.lint.json",
    "clean": "lerna run clean --ignore django-testbed",
    "prebuild": "lerna run clean",
    "prepublish": "lerna run build",
    "test": "jest",
    "dev": "lerna run --parallel 'dev'",
    "build": "lerna run --parallel 'build' --ignore django-testbed",
    "build:watch": "lerna run --parallel 'build:watch' --ignore django-testbed",
    "build:declarations": "tsc -b"
  },
  "devDependencies": {
    "@strictsoftware/typedoc-plugin-monorepo": "^0.2.1",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@types/jest": "^24.0.23",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/parser": "^2.7.0",
    "babel-jest": "^24.9.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "jest-fetch-mock": "^2.1.2",
    "lerna": "^3.18.4",
    "lint-staged": "^9.4.3",
    "prettier": "^1.19.1",
    "ts-jest": "^24.1.0",
    "typedoc": "^0.15.2",
    "typedoc-neo-theme": "^1.0.4"
  },
  "dependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "@babel/plugin-proposal-class-properties": "^7.7.0",
    "@babel/plugin-proposal-numeric-separator": "^7.2.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.6.2",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-typescript": "^7.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn check-types && lint-staged",
      "pre-push": "LINT_PUSH=1 ./bin/lint/lint-general.py",
      "commit-msg": "./bin/lint/git-commit-msg $HUSKY_GIT_PARAMS",
      "prepare-commit-msg": "./bin/lint/git-prepare-commit-msg $HUSKY_GIT_PARAMS"
    }
  }
}
