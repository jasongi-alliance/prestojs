{
  "name": "prestojs",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Dave Coates <david.coates@alliancesoftware.com.au>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "js-packages/@prestojs/*",
    "django-testbed"
  ],
  "scripts": {
    "lint": "eslint js-packages --ext .js,.ts",
    "check-types": "pnpify tsc -b tsconfig.lint.json",
    "clean": "yarn workspaces foreach --exclude django-testbed run clean",
    "prebuild": "yarn workspaces foreach run clean",
    "prepublish": "yarn workspaces foreach run build",
    "test": "jest",
    "dev": "yarn workspaces foreach -pvi -j 10 run dev",
    "build": "yarn workspaces foreach --exclude django-testbed -ptv run build",
    "build:watch": "yarn workspaces foreach --exclude django-testbed -p run 'build:watch'",
    "build:declarations": "pnpify tsc -b"
  },
  "devDependencies": {
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.7.4",
    "@babel/plugin-proposal-optional-chaining": "^7.7.5",
    "@babel/preset-react": "^7.8.3",
    "@strictsoftware/typedoc-plugin-monorepo": "^0.2.1",
    "@testing-library/jest-dom": "^5.1.1",
    "@testing-library/react": "^9.4.0",
    "@testing-library/react-hooks": "^3.2.1",
    "@types/jest": "^25.1.2",
    "@types/node": "^13.7.0",
    "@types/react": "^16.9.19",
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.19.0",
    "@yarnpkg/pnpify": "^2.0.0-rc.18",
    "babel-jest": "^25.1.0",
    "babel-preset-gatsby": "^0.2.28",
    "commitizen": "^4.0.3",
    "cz-lerna-changelog": "^2.0.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^2.3.0",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "jest-diff": "^25.1.0",
    "jest-fetch-mock": "^3.0.1",
    "lint-staged": "^9.5.0",
    "pnp-webpack-plugin": "^1.6.0",
    "prettier": "^1.19.1",
    "react-test-renderer": "^16.12.0",
    "ts-jest": "^25.2.1",
    "typedoc": "^0.15.2",
    "typedoc-neo-theme": "^1.0.4",
    "typescript": "^3.8.2",
    "yargs": "^15.1.0"
  },
  "peerDependencies": {
    "lerna": "*",
    "semantic-release": "*"
  },
  "dependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-numeric-separator": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-typescript": "^7.8.3",
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn check-types && lint-staged",
      "pre-push": "LINT_PUSH=1 ./bin/lint/lint-general.py",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  }
}
